<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="libreria-test" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.Almacen</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.Articulo</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.Compra</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.Distribuidor</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.Kardex</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.Marca</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.Medida</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.TipoArticulo</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.TipoMedida</class>
        <class>com.ues.sv.ingenieria.sistemas.tpi2019.entities.Venta</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:libreria"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
