<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="libreria-test" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Articulo</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Bodega</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Caja</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Compra</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Distribuidor</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Kardex</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Marca</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Medida</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Sucursal</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.TipoArticulo</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.TipoMedida</class>
    <class>com.ues.sv.ingenieria.sistemas.tpi2019.model.data.Venta</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:libreria"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <!--property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:testDB;create=true"/>
        <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/-->
    </properties>
  </persistence-unit>
</persistence>
